
<h1 align="center">Listing all articles</h1>



<% @articles.each do |article| %>

<div class="row">
  <div class="col-xs-10 col-offset-4">
    <div clas="well well-lg">

      <div class="article-title">
        <%=link_to article.name,article_path(article) %>
          </div>
<div class="article_body">
  <%= truncate(article.description ,length:100)%>
</div>


      <div class="article_actions">
        <%= link_to "Edit this article", edit_article_path(article),class: "btn btn-xs btn-primary" %>

        <%= link_to "delete this article", article_path(article) ,method: :delete ,
                    data:{confirm:"Aru you sure you want to delete this article"}  ,class: "btn btn-xs btn-danger" %>



      </div>
    </div>
  </div>
</div>

<% end %>

